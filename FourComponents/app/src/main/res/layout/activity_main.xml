<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivity">

    <include
        android:id="@+id/tab"
        layout="@layout/button_layout"/>

    <Button
        android:id="@+id/btn_task"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tab"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="进入singleTask页面"/>

    <Button
        android:id="@+id/btn_top"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_task"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="进入singleTop页面"/>

    <Button
        android:id="@+id/btn_instance"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_top"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="进入singleInstance页面"/>

    <Button
        android:id="@+id/btn_a"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_instance"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="A页面"/>

    <Button
        android:id="@+id/btn_b"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_a"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="B页面"/>

    <Button
        android:id="@+id/btn_c"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_b"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="C页面"/>

</RelativeLayout>
